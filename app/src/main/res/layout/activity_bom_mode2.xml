<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bom_mode2">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bomm"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="129dp"
        android:background="@drawable/duong5"
        android:text="Thiết lập"
        android:textAllCaps="false"></androidx.appcompat.widget.AppCompatButton>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="362dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:background="@drawable/duong4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="422dp"
        android:text="Chế độ bơm"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="28dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/duong4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="111dp"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="9dp"
                android:text="Thời gian tắt"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/timeoutbom"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18dp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Máy bơm"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/back2"
                android:layout_width="44dp"
                android:layout_height="26dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="697dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="239dp"
        android:layout_height="207dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="73dp"
        android:indeterminateOnly="false"
        android:progress="00"
        android:progressDrawable="@drawable/custom"

        android:rotation="00"
        app:layout_constraintVertical_bias="0.398" />

    <TextView
        android:id="@+id/textView4000"
        android:layout_width="79dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/progressBar"
        android:layout_alignTop="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="92dp"
        android:text="00:00:00"
        android:textSize="19dp" />

    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="20dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="-19dp"
        android:layout_marginBottom="212dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"

            android:layout_marginEnd="152dp"
            android:layout_marginBottom="0dp"
            android:text="Trung bình" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:text="Mạnh" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="332dp"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:text="Yếu" />
    </RelativeLayout>


</RelativeLayout>


