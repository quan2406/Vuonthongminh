<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Den_mode2">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/denn"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/duong5"
        android:text="Thiết lập"
        android:textAllCaps="false"></androidx.appcompat.widget.AppCompatButton>

    <RelativeLayout
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/duong4"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="340dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="111dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:text="Thời gian tắt"
                android:paddingLeft="9dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/timeoutden"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:inputType="number"
                android:textSize="18dp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Đèn"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/back3"
                android:layout_width="44dp"
                android:layout_height="26dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="697dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBarden"
        style="?android:attr/progressBarStyle"
        android:layout_width="239dp"
        android:layout_height="207dp"
        android:progress="00"
        app:layout_constraintVertical_bias="0.398"
        android:rotation="00"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/custom"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/textView40001"
        android:layout_width="79dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/progressBarden"
        android:layout_alignTop="@+id/progressBarden"
        android:layout_alignEnd="@+id/progressBarden"
        android:layout_alignBottom="@+id/progressBarden"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="94dp"
        android:text="00:00:00"
        android:textSize="19dp" />
</RelativeLayout>